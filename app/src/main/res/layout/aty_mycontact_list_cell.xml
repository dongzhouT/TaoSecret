<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="horizontal"
    android:padding="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mycontact_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="zhangsan"
                android:textColor="#5B96CF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_mycontact_phoneNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_mycontact_username"
                android:text="18822223312"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cell_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:text="@string/mobile"
                android:textColor="#7F7765"
                android:textSize="14sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/last_login_at"
                android:textColor="#7F7765"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_mycontact_lasttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9-19 12:30:00"
                android:textColor="#7F7765"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/cell_mobile_btn"
        android:layout_width="30dp"
        android:layout_height="38dp"
        android:background="@android:drawable/stat_sys_vp_phone_call" />

</LinearLayout>